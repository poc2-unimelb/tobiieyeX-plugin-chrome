<Window x:Class="NativeMessagingTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NativeMessagingTest"
        mc:Ignorable="d"
        Title="NativeMessagingTest" Height="304.348" Width="525">
    <Grid Margin="0,0,0,-8">
        <Label x:Name="label" Content="What it said" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtStdin" HorizontalAlignment="Left" Height="97" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497" AcceptsReturn="True" AcceptsTab="True" IsReadOnly="True"/>
        <TextBox x:Name="txtStdout" HorizontalAlignment="Left" Height="97" Margin="10,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497" AcceptsReturn="True" AcceptsTab="True"/>
        <Button x:Name="button" Content="Send Reply" HorizontalAlignment="Left" Margin="10,240,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
